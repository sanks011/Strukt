{
  "name": "strukt",
  "displayName": "Strukt - Interactive Project Map",
  "description": "Visualize your workspace as an interactive, real-time mind map",
  "version": "0.1.0",
  "publisher": "strukt",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "project map",
    "file tree",
    "visualization",
    "mind map",
    "folder structure"
  ],
  "activationEvents": [
    "onCommand:strukt.openProjectMap"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "strukt.openProjectMap",
        "title": "Open Project Map",
        "category": "Strukt"
      },
      {
        "command": "strukt.refreshProjectMap",
        "title": "Refresh Project Map",
        "category": "Strukt"
      }
    ],
    "configuration": {
      "title": "Strukt",
      "properties": {
        "strukt.maxDepth": {
          "type": "number",
          "default": 3,
          "description": "Maximum folder depth to visualize (lower = better performance)"
        },
        "strukt.excludePatterns": {
          "type": "array",
          "default": [
            "**/node_modules/**",
            "**/.git/**",
            "**/dist/**",
            "**/out/**",
            "**/.vscode/**"
          ],
          "description": "Glob patterns to exclude from visualization"
        },
        "strukt.showFileExtensions": {
          "type": "boolean",
          "default": true,
          "description": "Show file extensions in node labels"
        },
        "strukt.layout": {
          "type": "string",
          "enum": [
            "force-directed",
            "hierarchical",
            "radial"
          ],
          "default": "force-directed",
          "description": "Layout algorithm for 3D graph visualization"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && node esbuild.js --production",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.74.0",
    "@vscode/test-electron": "^2.3.8",
    "esbuild": "^0.19.11",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "3d-force-graph": "^1.73.3",
    "particles.js": "^2.0.0",
    "three": "^0.160.0"
  }
}
