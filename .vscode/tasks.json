{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "isBackground": true,
      "label": "npm: watch",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        {
          "owner": "typescript",
          "applyTo": "closedDocuments",
          "fileLocation": "relative",
          "pattern": {
            "regexp": "ERROR",
            "file": 1,
            "line": 2,
            "column": 3,
            "message": 4
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Starting compilation",
            "endsPattern": "(Watching for file changes|Found 0 errors)"
          }
        }
      ],
      "presentation": {
        "reveal": "never"
      }
    },
    {
      "type": "npm",
      "script": "compile",
      "label": "npm: compile",
      "group": "build",
      "problemMatcher": ["$tsc"]
    }
  ]
}
